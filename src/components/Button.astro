---
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
  button {
    padding: 1rem;
  }

  .primary {
    background-color: royalblue;
    color: aliceblue;
  }

  .secondery {
    background-color: aliceblue;
    color: royalblue;
  }

  .small {
    font-size: 1rem;
  }

  .medium {
    font-size: 2rem;
  }
</style>
